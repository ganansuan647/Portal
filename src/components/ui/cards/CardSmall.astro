---
// Import necessary modules and utilities
import { Image } from "astro:assets";
import Icon from "@components/ui/icons/Icon.astro";
import type { CollectionEntry } from "astro:content";

const { publication, publicationLocale = "" } = Astro.props;

interface Props {
  publication: CollectionEntry<"Publications">;
  publicationLocale?: string;
}

// Define classes to be used with the Image component
const imageClass =
  "absolute inset-0 h-full w-full object-cover object-center transition duration-[600ms] ease-[cubic-bezier(0.45,0,0.55,1)] group-hover:scale-110";
---

<!-- A clickable card that leads to the details of the publication-->
<a
  href={publicationLocale && publicationLocale !== "en"
    ? `/${publicationLocale}/Publications/${publication.slug.replace(/^zh\//, "")}/`
    : `/Publications/${publication.slug.replace(/^en\//, "")}/`}
  data-astro-prefetch
  class="group relative flex h-48 items-end overflow-hidden rounded-xl shadow-lg outline-none ring-zinc-500 focus-visible:ring dark:ring-zinc-200 dark:focus:outline-none md:h-80"
>
  <!-- The publication's main image -->
  <Image
    src={publication.data.main.imgCard}
    alt={publication.data.main.imgAlt}
    draggable={"false"}
    class={imageClass}
    format={"avif"}
  />
  <!-- An overlay gradient that sits on top of the publication image-->
  <div
    class="pointer-events-none absolute inset-0 bg-gradient-to-t from-neutral-800 via-transparent to-transparent opacity-50"
  >
  </div>
  <!-- The publication's subtitle and the anchor SVG icon-->
  <span
    class="relative mb-3 ml-4 inline-block text-sm font-bold text-neutral-50 transition duration-[600ms] ease-[cubic-bezier(0.45,0,0.55,1)] group-hover:scale-110 md:ml-5 md:text-lg"
    >{publication.data.description} <Icon name="openInNew" />
  </span>
</a>
