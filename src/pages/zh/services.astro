---
// 导入必要的组件
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";
import { getRelativeLocaleUrl } from 'astro:i18n';

// 导入必要的图片
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "提供专家建议",
    subTitle:
      "开始一个建筑项目可能会让人感到不知所措。通过我们的专业咨询服务，我们在每一步都为您提供指导，确保您做出明智的决策。无论您是DIY爱好者还是合格的承包商，我们的专家都在这里为您提供量身定制的建议，帮助您选择产品、确定项目范围以及遵守当地法规。",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "带有建筑图纸的平面图和数字平板。",
    imgTwo: personWorking,
    imgTwoAlt: "在办公室工作的人",
  },
  {
    isRightSection: false,
    title: "将设计变为现实",
    subTitle:
      "我们的合格工匠为每个建筑项目带来精确和卓越。从小型安装到重大结构工程，ScrewFast提供可靠的建筑服务，以实现您的计划。我们确保最高的安全和专业标准，使用我们丰富库存中的高质量工具和材料。",
    img: beforeAfter,
    imgAlt: "建筑工地的前后对比",
    btnExists: true,
    btnTitle: "了解更多",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "在专业监督下导航项目",
    subTitle:
      "有效的项目管理是成功建筑的核心。ScrewFast提供深入的规划和强有力的管理服务，确保您的项目按时并在预算内完成。让我们来处理工作流程协调、资源分配和与利益相关者沟通的复杂性，而您可以专注于您的愿景。",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "建筑工人协调一个项目",
    imgTwo: aerialView,
    imgTwoAlt: "管理中的建筑的鸟瞰图",
  },
  {
    isRightSection: false,
    title: "确保可持续的性能",
    subTitle:
      "我们对您的项目的承诺并不止于完成。ScrewFast提供持续的维护和支持服务，以确保您的建筑的持久性和性能。从定期检查到紧急支持，我们的响应团队随时为您提供无缝的支持。",
    img: usingTools,
    imgAlt:
      "穿着橙色和黑色背心、戴着白色安全帽的人，手持黄色和黑色电动工具",
  },
  {
    isRightSection: true,
    title: "为独特挑战制定量身定制的策略",
    subTitle:
      "对于我们更大规模的企业客户，ScrewFast提供量身定制的解决方案，以应对行业特定的挑战。通过了解您的独特需求，我们设计量身定制的策略，旨在优化您的运营、提高效率并推动您的业务发展。",
    single: false,
    imgOne: progressBuilding,
    imgOneAlt: "正在建设中的建筑结构",
    imgTwo: underConstruction,
    imgTwoAlt: "棕色和灰色的建筑正在施工",
    btnExists: true,
    btnTitle: "阅读更多",
    btnURL: "#",
  },
];
---

<MainLayout
  title="服务 | ScrewFast"
  lang="zh"
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://seismicye.top/zh/services",
    url: "https://seismicye.top/zh/services",
    name: "专家咨询服务 | ScrewFast",
    description:
      "将专业知识与您的愿景结合，ScrewFast提供卓越的服务和全面的解决方案，涵盖从咨询到项目完成的整个建筑行业。",
    isPartOf: {
      "@type": "WebSite",
      url: "https://seismicye.top/zh",
      name: "ScrewFast",
      description:
        "ScrewFast提供一流的硬件工具和专业的建筑服务，以满足您所有的项目需求。",
    },
    inLanguage: "zh",
  }}
>
  <!--MainSection是页面的介绍部分，也包含一个CTA按钮-->
  <MainSection
    title="将专业知识与您的愿景结合"
    subTitle="在ScrewFast，我们自豪地提供全面的解决方案和卓越的服务，致力于建筑和材料行业。我们的经验丰富的团队致力于支持您的项目，从设计到完成，提供一系列专业服务。"
    btnExists={true}
    btnTitle="安排咨询"
    btnURL={getRelativeLocaleUrl("zh", "#")}
  />
  <!-- RightSection和LeftSection包含有关各种服务的详细信息以及相关图像。
  它们交替设计以增加多样性。
  'btnExists'属性用于切换这些部分中按钮的显示。
  当btnExists={true}时，显示一个按钮。
  这可以用于链接到更详细的信息或相关资源。
  RightSection还可以根据'single'属性有条件地渲染一张或两张图片。
  如果'single'为true，则显示一张图片，否则显示两张。
  -->
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats部分展示对用户有价值的基本统计数据-->
  <FeaturesStats
    title="通过数字"
    subTitle="我们对质量和可靠性的承诺在我们进行的每个项目中都显而易见。在ScrewFast，我们致力于提供行业领先的服务，确保您的建筑项目设计持久。"
    mainStatTitle="96%"
    mainStatSubTitle="我们的客户评价ScrewFast的体验为卓越"
    stats={[
      {
        stat: "99.8%",
        description: "项目完成率",
      },
      {
        stat: "5,000+",
        description: "成功安装",
      },
      {
        stat: "85%",
        description: "客户年增长率",
      },
    ]}
  />
</MainLayout>
