---
// 导入必要的组件
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `联系我们 | ${SITE.title}`;
---

<!--利用MainLayout作为页面的外部布局，并定义SEO目的的元数据-->
<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://seismicye.top/contact",
    "url": "https://seismicye.top/contact",
    "name": "联系我们 | 叶爱君课题组",
    "description":
      "有问题或想讨论项目吗？请联系我们，让我们利用我们的工具和服务共同制定完美的解决方案。",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://seismicye.top",
      "name": "ScrewFast",
      "description":
        "ScrewFast 提供顶级的硬件工具和专业的施工服务，以满足您所有的项目需求。",
    },
    "inLanguage": "zh-CN"
  }}
>
  <ContactSection />
</MainLayout>
