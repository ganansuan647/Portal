---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Contact Us | ${SITE.title}`;
---

<!--Use MainLayout as the outer layout for the page and define SEO metadata-->
<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://seismicye.top/contact",
    "url": "https://seismicye.top/contact",
    "name": "Contact Us | SeismicYe Group",
    "description":
      "Do you have questions or want to discuss a project? Contact us, and let's work together to create the perfect solution using our tools and services.",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://seismicye.top",
      "name": "SeismicYe",
      "description":
        "The SeismicYe Research Group is dedicated to researching the next generation of bridges for resilience.",
    },
    "inLanguage": "en"
  }}
>
  <ContactSection />
</MainLayout>
